body
  margin 0
  padding 0
  font-family sans-serif

h1, h2, h3
  margin 5px 0px

h1
  margin 0px

small
  color darkgrey
  font-size 100%

.leaflet-container
  font-size 14px !important

.leaflet-tooltip-field
  border none !important
  box-shadow none!important
  background-color transparent !important
  z-index 9999 !important
  &:before
    border none !important

.leaflet-control-actions
  border 1px solid rgba(0,0,0,0.2)
  background-clip padding-box
  background #ffffffc2
  border-radius 5px
  padding 10px
  box-shadow 1px 1px 1px #0000001c

.crops
  overflow hidden

.crops-item
  display inline-block
  width 30%
  color darkgray
  overflow hidden
  margin-right 10px
  text-align center
  vertical-align top

.crops
  &--selected
    .crops-item
      width 100%
    .crops-item-button
      background-color transparent

.crops-item-button
  width 100%
  height 30px
  background-color whitesmoke
  border-radius 5px
  border 1px solid darkgray
  box-shadow 0px 3px 8px transparent
  transition all 0.1s
  cursor pointer
  &:HOVER
    box-shadow 0px 3px 8px #b9e2e4

.crops-item-button
  &--disabled
    color darkgray !important
    background white !important
    box-shadow 0px 3px 8px transparent !important

.crops-item-text
  font-size 11px !important
  line-height 12px
  padding-bottom 10px
  padding-top 3px